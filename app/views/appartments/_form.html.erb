<%= form_with(model: @appartment, local: true) do |form| %>

  <div class="appartment_name">
    <%= form.label :物件名 %>
    <%= form.text_field :name %>
  </div>
  <div class="appartment_rent">
    <%= form.label :賃料 %>
    <%= form.text_field :rent %>円
  </div>
  <div class="appartment_address">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>
  <div class="appartment_year_built">
    <%= form.label :築年数 %>
    <%= form.text_field :year_built %>年
  </div>
  <div class="appartment_optional">
    <%= form.label :備考 %>
    <%= form.text_field :optional %>
  </div>

<%= form.fields_for :staitions do |n| %>
  <div class="staition_line">
    <%= n.label :路線名 %>
    <%= n.text_field :line %>
  </div>
  <div class="staition_staition_name">
    <%= n.label :駅 %>
    <%= n.text_field :staition_name %>
  </div>
  <div class="staition_on_foot">
    <%= n.label :徒歩 %>
    <%= n.text_field :on_foot %>分
  </div>
<% end %>

  <%= form.submit "登録" %>
<% end %>
<%= link_to "一覧画面にもどる", appartments_path %>
