<h1>物件一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>築年数</th>
    <th>備考</th>
  </tr>
  <% @appartments.each do |appartment| %>
  <tr>
    <td><%= link_to '詳細', appartment_path(appartment.id) %></td>
    <td><%= link_to "編集", edit_appartment_path(appartment.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to '削除', appartment_path(appartment.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
  <% end %>
</table>
<br>
<%= link_to '物件を登録する', new_appartment_path %>
